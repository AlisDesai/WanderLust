<% layout("/layouts/boilerplate") %>

    <body>
        <div class="container">
            <h1>Create a New Listing</h1>
            <form action="/listings" method="POST" novalidate class="needs-validation">
                <div class="form-group">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" class="form-control" placeholder="Enter Your Listing Title"
                        required>
                    <div class="invalid-feedback">Title is required.</div>
                    <div class="valid-feedback">Barobar Chee!</div>
                </div>

                <div class="form-group">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control"
                        placeholder="Enter Your Listing Description" required></textarea>
                    <div class="invalid-feedback">Description is required.</div>
                    <div class="valid-feedback">Barobar Chee!</div>
                </div>

                <div class="form-group">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="listing[image]" class="form-control" placeholder="Enter Your Image URL">
                </div>

                <div class="form-group">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" name="listing[price]" class="form-control"
                        placeholder="Enter Your Listing Price" required>
                    <div class="invalid-feedback">Price is required.</div>
                    <div class="valid-feedback">Barobar Chee!</div>
                </div>

                <div class="form-group">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" class="form-control"
                        placeholder="Enter Your Listing Country" required>
                    <div class="invalid-feedback">Country is required.</div>
                    <div class="valid-feedback">Barobar Chee!</div>
                </div>

                <div class="form-group">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" class="form-control"
                        placeholder="Enter Your Listing Location" required>
                    <div class="invalid-feedback">Location is required.</div>
                    <div class="valid-feedback">Barobar Chee!</div>
                </div>

                <button class="btn btn-dark" type="submit">Submit</button>
            </form>
        </div>
    </body>