<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
            <% for(let list of allListing) { %>
                <a href="/listings/<%= list._id%>" class="listings-link">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="<%= list.image.url %>" alt="Card image cap">
                        <div class="card-body">
                            <h5>
                                <%= list.title%>
                            </h5>
                            <h6> Price = <%= list.price.toLocaleString("en-IN") %> / night
                            </h6>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>